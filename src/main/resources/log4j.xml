<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">




    <appender name="all_appender" class="org.apache.log4j.RollingFileAppender">
        <param name="maxFileSize" value="10MB" />
        <param name="maxBackupIndex" value="1" />
        <param name="File" value="/swissbib_index/solrDocumentProcessing/MarcToSolr/distsolr7/indexerlogs/root.log" />
        <param name="Threshold" value="ERROR" />
        <layout class="org.apache.log4j.TTCCLayout">
            <param name="DateFormat" value="ISO8601" />
        </layout>
    </appender>

    <appender name="indexerClient" class="org.apache.log4j.RollingFileAppender">
        <param name="maxFileSize" value="10MB" />
        <param name="maxBackupIndex" value="1" />
        <param name="File" value="/swissbib_index/solrDocumentProcessing/MarcToSolr/distsolr7initial/indexerlogs/indexerClient.log" />
        <param name="Threshold" value="ERROR" />
        <layout class="org.apache.log4j.TTCCLayout">
            <param name="DateFormat" value="ISO8601" />
        </layout>
    </appender>

    <appender name="updateParser" class="org.apache.log4j.RollingFileAppender">
        <param name="maxFileSize" value="10MB" />
        <param name="maxBackupIndex" value="1" />
        <param name="File" value="/swissbib_index/solrDocumentProcessing/MarcToSolr/distsolr7initial/indexerlogs/updateParser.log" />
        <param name="Threshold" value="INFO" />
        <layout class="org.apache.log4j.TTCCLayout">
            <param name="DateFormat" value="ISO8601" />
        </layout>
    </appender>


    <appender name="deleteParser" class="org.apache.log4j.RollingFileAppender">
        <param name="maxFileSize" value="10MB" />
        <param name="maxBackupIndex" value="1" />
        <param name="File" value="/swissbib_index/solrDocumentProcessing/MarcToSolr/distsolr7initial/indexerlogs/deleteParser.log" />
        <param name="Threshold" value="INFO" />
        <layout class="org.apache.log4j.TTCCLayout">
            <param name="DateFormat" value="ISO8601" />
        </layout>
    </appender>



    <logger name="org.swissbib.solr.IndexerClient"  additivity="false">
        <level value="info"/>
        <appender-ref ref="indexerClient"/>
    </logger>

    <logger name="org.swissbib.solr.SolrXMLUpdateParser"  additivity="false">
        <level value="info"/>
        <appender-ref ref="updateParser"/>
    </logger>


    <logger name="org.swissbib.solr.SolrXMLDeleteParser"  additivity="false">
        <level value="debug"/>
        <appender-ref ref="deleteParser"/>
    </logger>

    <root>
        <priority value="ERROR"/>
        <appender-ref ref="all_appender" />
    </root>
</log4j:configuration>